generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum WorkspaceInviteStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

enum WorkspaceNotificationType {
  MENTION
  ASSIGNMENT_CHANGED
}

enum BoardColumnType {
  TEXT
  STATUS
  PERSON
  DATE
  NUMBER
  TAGS
  CHECKBOX
  URL
}

enum BoardViewType {
  TABLE
  KANBAN
  CALENDAR
  TIMELINE
}

model User {
  id                   String              @id @default(cuid())
  supabaseAuthId       String?             @unique
  email                String              @unique
  name                 String?
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  ownedWorkspaces      Workspace[]         @relation("WorkspaceOwner")
  memberships          WorkspaceMember[]
  createdBoards        Board[]             @relation("BoardCreatedBy")
  updatedItems         BoardItem[]         @relation("ItemLastEditedBy")
  assignedValues       BoardCellValue[]    @relation("PersonColumnValue")
  updatedValues        BoardCellValue[]    @relation("ValueUpdatedBy")
  createdInvites       WorkspaceInvite[]   @relation("WorkspaceInviteCreatedBy")
  acceptedInvites      WorkspaceInvite[]   @relation("WorkspaceInviteAcceptedBy")
  workspaceAuditEvents WorkspaceAuditLog[] @relation("WorkspaceAuditActor")
  receivedNotifications WorkspaceNotification[] @relation("WorkspaceNotificationRecipient")
  sentNotifications     WorkspaceNotification[] @relation("WorkspaceNotificationActor")
}

model Workspace {
  id        String              @id @default(cuid())
  name      String
  ownerId   String
  owner     User                @relation("WorkspaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members   WorkspaceMember[]
  invites   WorkspaceInvite[]
  auditLogs WorkspaceAuditLog[]
  notifications WorkspaceNotification[]
  boards    Board[]
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String
  userId      String
  role        WorkspaceRole @default(MEMBER)
  workspace   Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([workspaceId, userId])
}

model Board {
  id          String       @id @default(cuid())
  workspaceId String
  name        String
  createdById String
  isPrivate   Boolean      @default(false)
  shareToken  String?      @unique
  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdBy   User         @relation("BoardCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)
  groups      BoardGroup[]
  columns     BoardColumn[]
  views       BoardView[]
  items       BoardItem[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model BoardGroup {
  id          String      @id @default(cuid())
  boardId      String
  name        String
  position    Int
  isCollapsed Boolean     @default(false)
  board       Board       @relation(fields: [boardId], references: [id], onDelete: Cascade)
  items       BoardItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([boardId, position])
}

model BoardColumn {
  id        String          @id @default(cuid())
  boardId   String
  name      String
  type      BoardColumnType
  position  Int
  settings  Json?
  board     Board           @relation(fields: [boardId], references: [id], onDelete: Cascade)
  values    BoardCellValue[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@unique([boardId, position])
}

model BoardItem {
  id             String           @id @default(cuid())
  boardId        String
  groupId        String
  name           String
  position       Int
  lastEditedById String?
  board          Board            @relation(fields: [boardId], references: [id], onDelete: Cascade)
  group          BoardGroup       @relation(fields: [groupId], references: [id], onDelete: Cascade)
  lastEditedBy   User?            @relation("ItemLastEditedBy", fields: [lastEditedById], references: [id], onDelete: SetNull)
  values         BoardCellValue[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@unique([groupId, position])
}

model BoardCellValue {
  id          String      @id @default(cuid())
  itemId      String
  columnId    String
  textValue   String?
  statusValue String?
  personId    String?
  dateValue   DateTime?
  numberValue Float?
  tagsValue   Json?
  checkboxValue Boolean?
  urlValue    String?
  updatedById String?
  item        BoardItem   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  column      BoardColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)
  person      User?       @relation("PersonColumnValue", fields: [personId], references: [id], onDelete: SetNull)
  updatedBy   User?       @relation("ValueUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([itemId, columnId])
}

model BoardView {
  id        String       @id @default(cuid())
  boardId   String
  name      String
  type      BoardViewType
  position  Int
  config    Json?
  board     Board        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@unique([boardId, position])
}

model WorkspaceInvite {
  id           String                @id @default(cuid())
  workspaceId  String
  invitedById  String
  acceptedById String?
  email        String
  role         WorkspaceRole         @default(MEMBER)
  token        String                @unique
  status       WorkspaceInviteStatus @default(PENDING)
  expiresAt    DateTime
  acceptedAt   DateTime?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  workspace    Workspace             @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy    User                  @relation("WorkspaceInviteCreatedBy", fields: [invitedById], references: [id], onDelete: Cascade)
  acceptedBy   User?                 @relation("WorkspaceInviteAcceptedBy", fields: [acceptedById], references: [id], onDelete: SetNull)

  @@index([workspaceId, status])
  @@index([workspaceId, email])
}

model WorkspaceAuditLog {
  id          String    @id @default(cuid())
  workspaceId String
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  details     Json?
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  actor       User?     @relation("WorkspaceAuditActor", fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([workspaceId, createdAt])
}

model WorkspaceNotification {
  id          String                    @id @default(cuid())
  workspaceId String
  userId      String
  actorUserId String?
  type        WorkspaceNotificationType
  title       String
  message     String
  entityType  String
  entityId    String?
  readAt      DateTime?
  createdAt   DateTime                  @default(now())
  workspace   Workspace                 @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User                      @relation("WorkspaceNotificationRecipient", fields: [userId], references: [id], onDelete: Cascade)
  actor       User?                     @relation("WorkspaceNotificationActor", fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([workspaceId, createdAt])
  @@index([userId, readAt, createdAt])
}
